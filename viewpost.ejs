                        <form action="/delete/<%= blogviews[index].id %>" method="post">
                            <button class="delete-btn">Delete</button>
                        </form>
                        <a class="edit-btn" href="/edit/<%=  blogviews[index].id %>">edit</a>
                    </div>--> 
                </div>
                <% } %>
                    
    </div>
</div>

