<%- include('partials/header.ejs') %>
<% if (blogviews.length<1) { %>
    <h2>No blog has been published till now</h2>
    
 
<% }else {%>
    <h1>here , the blogs were published</h1>
<%} %>
<div class="overflow-div">
    <div class="home-container">
            <% for( let index=0; index < blogviews.length; index++ ) { %>
                <div class="blog-card">
                    <span class="blog-number">
                        <%= index+ 1 %>
                    </span>
                    <h4>
                        <%= blogviews[index].blogTitle %>
                    </h4>
                    <p>
                        <%= blogviews[index].blogDis?.slice(0,300) %>
                           
                    </p>
