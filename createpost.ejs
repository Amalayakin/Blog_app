<link rel="stylesheet" href="/styles/styles.css">
<div class="createBlogBg">
    <h1>Create a New Blog Post</h1>
    <form action="/viewblog" method="POST">
    <label for="title" class="title-Label">Post Title:</label><br>
    <input type="text" id="title" name="title" placeholder="enter the title" required><br><br>

    <label for="content" class="content-Label">Post Content:</label><br>
    <textarea id="content" name="content" placeholder="enter the content..." rows="10" cols="50" required></textarea><br><br>

    <button type="submit" class="createBtn">Create Post</button>
    </form>
</div>

